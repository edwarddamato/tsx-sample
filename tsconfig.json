{
    "compilerOptions": {
        "outDir": "ts-build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./server"
    ]
}
